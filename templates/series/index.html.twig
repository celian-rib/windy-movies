{% extends 'base.html.twig' %}

{% block title %}Series index
{% endblock %}

{% block body %}
	<h1>Notre catalogue</h1>

	<div class="series-list-container">
		{% for s in series %}
			<a href="{{ path('series_show', {'id': s.id}) }}" class="serie-container">
				<img src="{{ path('series_poster', {'id': s.id}) }}"/>
				<div class="title-container">
					<h1 class="fade-txt">{{ s.title }}</h1>
                    <p class="fade-txt">{{ s.yearStart }}</p>
				</div>
			</a>
		{% endfor %}
	</div>
	<style>
		.series-list-container {
			width: 100%;

			display: flex;
			flex-wrap: wrap;
			justify-content: space-evenly;
		}
		.serie-container {
            color: white;
			margin: 1em;
			width: 200px;
			height: 300px;
			border-radius: 20px;
			overflow: hidden;
			position: relative;
		}
		.serie-container > img {
			left: 0;
			top: 0;
			width: 100%;
			height: 100%;
			position: absolute;
		}
		.title-container {
			opacity: 0;
			position: absolute;
			bottom: 0;
			right: 0;
			left: 0;
			height: 100%;
			background: linear-gradient(180deg, rgba(0,0,0,0) 0%, rgba(0,0,0,0.9) 100%);
			transition: opacity 0.5s;
		}
		.serie-container:hover {
            cursor: pointer;
        }
		.serie-container:hover .title-container {
			opacity: 1;
		}
		.title-container h1 {
			position: absolute;
			bottom: 14px;
            font-size: 1.5em;
            flex: 1;
            padding: 0 15px 0 15px;
		}
		.title-container p {
			position: absolute;
			bottom: 0px;
            font-size: 0.8em;
            flex: 1;
            padding: 0 15px 0 15px;
			transform: translateX(-10px);
		}
        .fade-txt {
			opacity: 0;
			transform: translateY(10px);
            transition: transform 1s;
        }
		.serie-container:hover .title-container .fade-txt {
			transform: translateY(0) translateX(0);
			opacity: 1;
		}
	</style>
{% endblock %}


